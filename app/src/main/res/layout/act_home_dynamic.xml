                    android:id="@+id/event_content_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/color_a2b8c8"/>
            </ScrollView>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_below="@+id/event_content_show"
                android:layout_width="match_parent"
                android:layout_height="136px"
                android:layout_marginTop="25px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12px"
                    android:src="@drawable/icon_pre" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/event_photo_list"
                    android:layout_width="846px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12px"
                    android:src="@drawable/icon_next" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

