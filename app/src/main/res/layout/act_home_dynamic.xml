        <TextView
            android:id="@+id/home_dynamic_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:textSize="32sp"
            android:textColor="@color/color_5bddf0"/>
        <TextView
            android:id="@+id/home_dynamic_time"
            android:layout_below="@+id/home_dynamic_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/color_a2b8c8"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/event_content"
            android:layout_below="@+id/home_dynamic_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:visibility="gone">
            <ScrollView
                android:layout_below="@+id/home_dynamic_time"
                android:layout_width="823px"
                android:layout_height="match_parent"
                android:layout_marginBottom="36px"
                android:layout_centerHorizontal="true"
                android:scrollIndicators="right"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/event_content_txt_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/color_a2b8c8"/>
            </ScrollView>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/event_content_with_pic"
            android:layout_below="@+id/home_dynamic_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:visibility="visible">
            <ScrollView
                android:id="@+id/event_content_show"
                android:layout_below="@+id/home_dynamic_time"
                android:layout_width="823px"
                android:layout_height="346px"
                android:layout_centerHorizontal="true"
