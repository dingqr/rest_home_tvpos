<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_zoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_warning_three"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="8px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12px"
                android:layout_marginTop="26px"
                android:text="服务进度"
                android:textColor="@color/color_FFFFFF"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/iv_user_avatar_zoom"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8px"
                android:src="@drawable/ic_user_avatar" />

            <TextView
                android:id="@+id/tv_name_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="王猛"
                android:textColor="@color/color_FFFFFF"
                android:textSize="9sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:layout_toRightOf="@+id/ll_left"
            android:orientation="vertical"
            android:paddingRight="16px">


            <TextView
                android:id="@+id/tv_sex_old_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="26px"
                android:drawablePadding="10px"
                android:text="年龄：83    性别：男"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_address_zoom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="9px"
                android:baselineAligned="false"
                android:drawableLeft="@drawable/ic_address_black"
                android:drawablePadding="10px"
                android:text="住养大楼2层205"
                android:textColor="#383e47"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_time_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="26px"
                android:text="2018年06月01日 12:23:02"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_type_child_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_little_help_white"
                android:drawablePadding="10px"
                android:text="一键求助"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginTop="26px"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="20px"
                android:src="@drawable/ic_item_arrow_right" />

            <ImageView
                android:id="@+id/iv_warning_level_zoom"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/ic_warning_blue_zoom" />

            <TextView
                android:id="@+id/tv_warning_note_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="2"
                android:text="三级跌倒"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginBottom="36px"
        android:layout_marginTop="2px">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="35px"
            android:background="#feeed2"
            android:visibility="gone"></View>

        <com.smart.tvpos.widgets.GradientProgressBar
            android:id="@+id/progressBarZoom"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
        <!--<com.smart.tvpos.widgets.GradientProgressBar-->
        <!--android:id="@+id/progressBarZoom"-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:max="100"-->
        <!--android:progress="80"-->
        <!--android:progressDrawable="@drawable/bg_grdient_progress_zoom"-->
        <!--android:visibility="visible" />-->
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>