<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6px"
    android:layout_marginBottom="6px"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="6px"
        android:text="喂早饭"
        android:textColor="#b2cddb"
        android:textSize="12sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:layout_gravity="center_vertical">
        <View
            android:id="@+id/barChatView"
            android:layout_width="580px"
            android:layout_height="20px"
            android:background="@drawable/bg_bar_with_shadow"/>

        <View
            android:id="@+id/barPercentChatView"
            android:layout_width="0px"
            android:layout_height="12px"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="56"
        android:textColor="#b2cddb"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_percent_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="%"
        android:textColor="#b2cddb"
        android:textSize="12sp"/>
</com.zhy.autolayout.AutoLinearLayout>