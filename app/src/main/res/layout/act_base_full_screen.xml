<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_full_screen"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginTop="@dimen/px_30"
        android:src="@drawable/default_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_30"
        android:drawablePadding="@dimen/px_16"
        android:onClick="onActionFinish"
        android:padding="@dimen/px_50"
        android:text="退出"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_32" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_150"></FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_server_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务模式：云端服务"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_hot_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="服务热线：400-0000-0000"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="应用版本：V1.0.1"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

</RelativeLayout>