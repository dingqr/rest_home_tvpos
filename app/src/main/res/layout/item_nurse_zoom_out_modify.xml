<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_zoom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_warning_three"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="8px"
            android:layout_marginTop="42px"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_user_avatar_zoom"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8px"
                android:src="@drawable/ic_user_avatar" />

            <TextView
                android:id="@+id/tv_name_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="王猛"
                android:textColor="@color/color_FFFFFF"
                android:textSize="9sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@+id/ll_left"
            android:orientation="vertical"
            android:paddingRight="16px">

            <TextView
                android:id="@+id/tv_type_nurse_name_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_help_black"
                android:drawablePadding="10px"
                android:text="一级护理"
                android:textColor="#3a3d49"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_sex_old_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="26px"
                android:drawablePadding="10px"
                android:text="年龄：83    性别：男"
                android:textColor="@color/color_FFFFFF"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_address_zoom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:drawableLeft="@drawable/ic_address_black"
                android:drawablePadding="10px"
                android:text="住养大楼2层205"
                android:textColor="#3a3d49"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_time_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="26px"
                android:text="2018年06月01日 12:23:02"
                android:textColor="@color/color_FFFFFF"
                android:textSize="9sp" />


        </com.zhy.autolayout.AutoLinearLayout>
        <!--跌倒级别-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginTop="40px"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_warning_level_zoom"
                android:layout_width="42px"
                android:layout_height="42px"
                android:src="@drawable/ic_warning_blue_zoom" />
            <!--暂时固定显示紧急-->
            <TextView
                android:id="@+id/tv_warning_level_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8px"
                android:text="紧急"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_thing_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8px"
                android:text="意外走失"
                android:textColor="@color/color_FFFFFF"
                android:textSize="8sp" />
        </com.zhy.autolayout.AutoLinearLayout>
        <!--跌倒级别-->
    </com.zhy.autolayout.AutoRelativeLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="21px"
        android:layout_marginRight="21px"
        android:layout_marginTop="30px"
        android:background="@color/color_FFFFFF"></View>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="32"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_heartbeat_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_heart_zoom"
                android:drawablePadding="14px"
                android:text="90"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_breath_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:drawableLeft="@drawable/ic_lung_zoom"
                android:drawablePadding="20px"
                android:text="15"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:layout_gravity="center"
            android:background="@color/color_FFFFFF"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_status_zoom"
                    android:layout_width="38px"
                    android:layout_height="38px"
                    android:src="@drawable/ic_jingwo" />

                <TextView
                    android:id="@+id/tv_status_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_status_zoom"
                    android:layout_marginLeft="12px"
                    android:layout_toRightOf="@+id/iv_status_zoom"
                    android:text="静卧"
                    android:textColor="@color/color_4990e3"
                    android:textSize="10sp" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <!--占据阴影的高度-->
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:visibility="invisible"></View>

</com.zhy.autolayout.AutoLinearLayout>