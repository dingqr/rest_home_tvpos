<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal_shadow"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="36px"
        android:paddingRight="36px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8px"
            android:layout_marginTop="42px"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10px"
                android:src="@drawable/ic_user_avatar" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="王猛"
                android:textColor="@color/color_adadad"
                android:textSize="10sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="vertical"
            android:paddingRight="10px">

            <TextView
                android:id="@+id/tv_type_nurse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:drawableLeft="@drawable/ic_help_black"
                android:drawablePadding="10px"
                android:text="一级护理"
                android:textColor="#3a3d49"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_sex_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18px"
                android:layout_marginLeft="22px"
                android:drawablePadding="10px"
                android:text="年龄：83    性别：男"
                android:textColor="@color/color_adadad"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2px"
                android:baselineAligned="false"
                android:drawableLeft="@drawable/ic_address_black"
                android:drawablePadding="10px"
                android:text="住养大楼2层205"
                android:textColor="#3a3d49"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:text="2018年06月01日 12:23:02"
                android:textColor="@color/color_adadad"
                android:textSize="10sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="20px"
                android:src="@drawable/ic_item_arrow_right" />

            <ImageView
                android:id="@+id/iv_warning_level_normal"
                android:layout_width="42px"
                android:layout_height="42px"
                android:src="@drawable/ic_warning_blue" />

            <TextView
                android:id="@+id/tv_warning_note_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="2"
                android:text="三级跌倒"
                android:textColor="@color/color_4990e3"
                android:textSize="8sp" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="6px"
        android:layout_marginRight="6px"
        android:layout_marginTop="34px"
        android:background="@color/color_d2d2d2"></View>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="18px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="32"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_heartbeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_heart_normal"
                android:drawablePadding="14px"
                android:text="90"
                android:textColor="@color/color_868686"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_breath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:drawableLeft="@drawable/ic_lung_normal"
                android:drawablePadding="20px"
                android:text="15"
                android:textColor="@color/color_868686"
                android:textSize="16sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:layout_gravity="center"
            android:background="@color/color_d2d2d2"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_jingwo" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_status"
                    android:layout_marginLeft="12px"
                    android:layout_toRightOf="@+id/iv_status"
                    android:text="静卧"
                    android:textColor="@color/color_4990e3"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
